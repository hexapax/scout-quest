{
  "name": "scout-quest-mcp",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start:scout": "node dist/scout.js",
    "start:admin": "node dist/admin.js",
    "start:guide": "node dist/guide.js",
    "start:cron": "node dist/cron.js",
    "scoutbook-sync": "node dist/scoutbook/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:eval": "npx tsx test/harness.ts",
    "test:eval:dry": "npx tsx test/harness.ts --dry-run",
    "test:eval:new": "npx tsx test/index.ts",
    "test:compare": "npx tsx test/compare.ts",
    "test:seed": "npx tsx test/seed.ts seed",
    "test:reset": "npx tsx test/seed.ts reset",
    "test:seed:clear": "npx tsx test/seed.ts clear"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "mongodb": "^6.0.0",
    "node-cron": "^4.2.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  }
}
