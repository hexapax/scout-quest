project_id       = "scout-coach"                           # Your GCP project ID
region           = "us-east4"                              # Virginia (closest to Atlanta)
zone             = "us-east4-b"
domain_aichat    = "ai-chat.hexapax.com"                   # Full-access instance
domain_scout     = "scout-quest.hexapax.com"               # Locked-down scout instance
dns_zone_name    = "hexapax-com"                            # Cloud DNS managed zone name
dns_project_id   = "hexapax-web"                             # Project that owns the DNS zone
credentials_file = "~/.config/gcloud/scout-deployer-key.json"

# Optional: restrict SSH to your IP for security
# Find your IP: curl ifconfig.me
# ssh_source_ranges = ["YOUR.IP.HERE/32"]

# GCS secret storage: .env files are stored in gs://${project_id}-tfstate/config/
# Use deploy-config.sh push/pull to sync. See README for workflow.
